<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Prescription_records"
    android:background="@drawable/testbackground">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:gravity="center_horizontal"
            android:id="@+id/suva">

            <TextView
                android:id="@+id/myaptupcoming2"
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:background="@drawable/blue_border_rounded_cornwe"

                android:text="Reports"
                android:textColor="#000000"
                android:textSize="20sp"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/myaptpast2"
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:background="@drawable/blue_fill__rounded_color"
                android:text="Prescriptions"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:layout_toRightOf="@id/myaptupcoming2"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:gravity="center"/>

        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recviewPresRecord"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_below="@+id/suva"/>

        </RelativeLayout>

    </ScrollView>


</RelativeLayout>



</androidx.constraintlayout.widget.ConstraintLayout>