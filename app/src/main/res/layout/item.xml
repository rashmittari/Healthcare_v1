<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="8dp"
    app:cardCornerRadius="8dp"
    android:layout_margin="16dp"
    app:cardBackgroundColor="@color/white">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginVertical="8dp"
        android:id="@+id/detailscard">

        <ImageView
            android:id="@+id/profilepic"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:src="@drawable/profile"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/linearlayofname"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@id/profilepic">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dr."
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/userFullName"
                android:layout_marginStart="2dp"
                android:text="boy"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/drproffesion"
            android:layout_below="@id/linearlayofname"
            android:layout_toRightOf="@id/profilepic"
            android:layout_marginStart="16dp"
            android:text="Cardeologist"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/drqualification"
            android:layout_below="@id/drproffesion"
            android:layout_toRightOf="@id/profilepic"
            android:layout_marginStart="16dp"
            android:text="MBBS, MD"
            android:textColor="@color/black"
            android:textSize="14sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/drtimings"
            android:layout_below="@id/drqualification"
            android:layout_toRightOf="@id/profilepic"
            android:layout_marginStart="16dp"
            android:text="Mon to Sat 5pm-7pm"
            android:textColor="@color/black"
            android:textSize="14sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/draddress"
            android:layout_below="@id/drtimings"
            android:layout_toRightOf="@id/profilepic"
            android:layout_marginStart="16dp"
            android:text="Shop no. 23, Eagle Appartments, St.Inez Goa"
            android:textColor="@color/black"
            android:textSize="14sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/drfees"
            android:layout_below="@id/draddress"
            android:layout_toRightOf="@id/profilepic"
            android:layout_marginStart="16dp"
            android:text="Fees: Rs 500"
            android:textColor="@color/black"
            android:textSize="14sp" />



<!--
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/druserid"
            android:layout_below="@id/drfees"
            android:layout_toRightOf="@id/profilepic"
            android:layout_marginStart="16dp"
            android:text="Lets see if it works"
            android:textColor="@color/black"
            android:textSize="14sp" />
-->



    </RelativeLayout>

</androidx.cardview.widget.CardView>